{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "DOM",
        "DOM.Iterable",
        "esnext"
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }